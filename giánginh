<script>
function check(){
    const mk = document.getElementById("pass").value;
    if(mk === "6789"){
        document.getElementById("login").classList.add("hidden");
        document.getElementById("letterBox").classList.remove("hidden");
    }else{
        alert("sai mk rá»“i ğŸ˜¶");
    }
}
function showGift(){
    document.getElementById("letterBox").classList.add("hidden");
    document.getElementById("giftBox").classList.remove("hidden");
}
function openGift(){
    document.getElementById("giftBox").classList.add("hidden");
    document.getElementById("inside").classList.remove("hidden");
}
